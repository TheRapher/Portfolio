<Login>:
    BoxLayout
        id: login_layout
        orientation: 'vertical'
        padding: [10,50,10,50]
        spacing: 50

        Label:
            text: 'Bienvenido al Login'
            font_size: 32
        Label:
            id:lbl
            text: ''
            font_size: 32
        BoxLayout:
            orientation: 'vertical'

            Label:
                text: 'Usuario'
                font_size: 18
                halign: 'left'
                text_size: root.width-20, 20

            TextInput:
                id: usuario
                multiline:False
                font_size: 18

        BoxLayout:
            orientation: 'vertical'
            Label:
                text: 'Contraseña'
                halign: 'left'
                font_size: 18
                text_size: root.width-20, 20

            TextInput:
                id: contraseña
                multiline:False
                password:True
                font_size: 20

        Button:
            text: 'Verificar'
            font_size: 24
            on_press: root.do_login(usuario.text, contraseña.text)